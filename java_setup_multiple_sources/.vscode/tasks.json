{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "${workspaceFolder}/bin", // Output directory
                "${workspaceFolder}/src/*.java" // Compile all Java files in the src directory
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}